<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapse"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:collapsedTitleTextAppearance="@style/collapsedTitleStyle"
                    app:expandedTitleMarginBottom="26dp"
                    app:expandedTitleMarginStart="26dp"
                    app:expandedTitleTextAppearance="@style/expandedTitleStyle"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:title=""
                    app:titleEnabled="true"
                    android:background="#971b2a">

                    <RelativeLayout
                        app:layout_collapseMode="parallax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/secondaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:fontFamily="@font/nunito_extrabold"
                            android:gravity="center"
                            android:text="Institute Awards"
                            android:textColor="@color/white"
                            android:textSize="26sp" />
                    </RelativeLayout>
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/Theme.JobFinder.Toolbar"
                        android:fitsSystemWindows="true"
                        app:background="@android:color/transparent"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/Theme.JobFinder.PopupOverlay"
                        app:titleTextColor="@color/white"
                        />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>


            <ImageView
                android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="left"
                android:contentDescription="@string/hi"
                android:layout_marginLeft="5dp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_top"
            android:layout_marginTop="100dp"
            app:layout_anchor="@id/appbar"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="8dp"
                        android:id="@id/c1"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_marginTop="10dp"
                                android:layout_width="175dp"
                                android:layout_height="90dp"
                                android:background="@drawable/year_2021"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardBackgroundColor="@color/black"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="8dp"
                                android:focusable="true"
                                android:clickable="true"
                                android:foreground="?attr/selectableItemBackground"
                                app:cardMaxElevation="10dp"
                                android:id="@+id/b2021"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:layout_margin="8dp"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="Hide"
                                    android:id="@+id/t2021"
                                    android:elevation="8dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="8dp"
                        android:id="@id/c1"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="10dp"
                        app:cardElevation="4dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <ImageView
                                android:layout_width="175dp"
                                android:layout_height="100dp"
                                android:background="@drawable/year_2020"/>
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                app:cardBackgroundColor="@color/black"
                                android:layout_margin="8dp"
                                app:cardCornerRadius="8dp"
                                app:cardMaxElevation="10dp"
                                android:focusable="true"
                                android:clickable="true"
                                android:id="@+id/b2020"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="#fff"
                                    android:layout_margin="8dp"
                                    android:textSize="18sp"
                                    android:fontFamily="@font/nunito_semibold"
                                    android:text="View"
                                    android:id="@+id/t2020"
                                    android:elevation="8dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"/>
                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/l2020"
                android:visibility="gone"
                android:layout_marginTop="250dp">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="431dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="8dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="356dp"
                            android:layout_height="431dp"
                            android:id="@+id/i1"
                            android:layout_gravity="center"
                            android:src="@drawable/aw_1"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="343dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="8dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="351dp"
                            android:layout_height="343dp"
                            android:id="@+id/i2"
                            android:layout_gravity="center"
                            android:src="@drawable/aw_2"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/l2021"
                android:layout_marginTop="250dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="401dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="8dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="345dp"
                            android:layout_height="401dp"
                            android:id="@+id/i3"
                            android:layout_gravity="center"
                            android:src="@drawable/aw_3"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="391dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="8dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="350dp"
                            android:layout_height="391dp"
                            android:id="@+id/i4"
                            android:layout_gravity="center"
                            android:src="@drawable/aw_4"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />

            </LinearLayout>


        </FrameLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>
