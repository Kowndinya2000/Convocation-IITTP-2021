<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground">
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:elevation="0dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapse"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:collapsedTitleTextAppearance="@style/collapsedTitleStyle"
                    app:expandedTitleMarginBottom="26dp"
                    app:expandedTitleMarginStart="26dp"
                    app:expandedTitleTextAppearance="@style/expandedTitleStyle"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                    app:title=""
                    app:titleEnabled="true"
                    android:background="#971b2a">

                    <RelativeLayout
                        app:layout_collapseMode="parallax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/secondaryText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="36dp"
                            android:gravity="center"
                            android:fontFamily="@font/nunito_extrabold"
                            android:text="Graduands List"
                            android:textColor="@color/white"
                            android:textSize="26sp" />
                    </RelativeLayout>
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:theme="@style/Theme.JobFinder.Toolbar"
                        android:fitsSystemWindows="true"
                        app:background="@android:color/transparent"
                        app:layout_collapseMode="pin"
                        app:popupTheme="@style/Theme.JobFinder.PopupOverlay"
                        app:titleTextColor="@color/white"
                        />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>


            <ImageView
                android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="left"
                android:contentDescription="@string/hi"
                android:layout_marginLeft="5dp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_top"
            android:layout_marginTop="100dp"
            app:layout_anchor="@id/appbar"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="255dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_height="180dp"
                    app:cardCornerRadius="8dp"
                    android:id="@id/c1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="210dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Civil Engineering"
                        android:layout_gravity="start"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="10dp"
                    app:cardMaxElevation="10dp"
                    android:padding="2dp"
                    android:focusable="true"
                    android:id="@+id/b1"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/civil"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="255dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/c2"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="210dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Computer \n Science and Engineering"
                        android:layout_gravity="start"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="10dp"
                    app:cardMaxElevation="10dp"
                    android:padding="2dp"
                    android:layout_marginStart="5dp"
                    android:id="@+id/b2"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="12dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="4dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/cse"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="255dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="180dp"
                    app:cardCornerRadius="8dp"
                    android:id="@+id/c3"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="210dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Electrical Engineering"
                        android:layout_gravity="start"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="10dp"
                    app:cardMaxElevation="10dp"
                    android:padding="2dp"
                    android:id="@+id/b3"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="12dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardElevation="4dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ee"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="255dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/m4"
                    android:layout_height="180dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="210dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Mathematics and Statistics"
                        android:layout_gravity="start"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="10dp"
                    app:cardMaxElevation="10dp"
                    android:id="@+id/m44"
                    android:padding="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/maths_logo"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:padding="12dp"
                android:layout_height="255dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/c4"
                    android:layout_height="180dp"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="10dp"
                    app:cardElevation="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="210dp"
                        android:layout_height="match_parent"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Mechanical Engineering"
                        android:layout_gravity="start"
                        android:gravity="center"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="210dp"
                    android:layout_height="220dp"
                    android:layout_marginBottom="10dp"
                    app:cardMaxElevation="10dp"
                    android:id="@+id/b4"
                    android:padding="2dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/mech"/>
                </androidx.cardview.widget.CardView>

            </FrameLayout>
        </LinearLayout>


        </FrameLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>
