<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <FrameLayout android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapse"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:collapsedTitleTextAppearance="@style/collapsedTitleStyle"
                app:expandedTitleMarginBottom="26dp"
                app:expandedTitleMarginStart="26dp"
                app:expandedTitleTextAppearance="@style/expandedTitleStyle"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                app:title=""
                app:titleEnabled="true"
                android:background="#971b2a">

                <RelativeLayout
                    app:layout_collapseMode="parallax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/secondaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="36dp"
                        android:gravity="center"
                        android:fontFamily="@font/nunito_extrabold"
                        android:text="Mechanical Engineering"
                        android:textColor="@color/white"
                        android:textSize="26sp" />
                </RelativeLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

            <ImageView
                android:background="@drawable/ic_baseline_arrow_back_ios_new_24"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:foreground="?attr/selectableItemBackground"
                android:onClick="left"
                android:contentDescription="@string/hi"
                android:layout_marginStart="5dp"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_rounded_top"
            android:layout_marginTop="100dp"
            app:layout_anchor="@id/appbar"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="4dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="350dp"
                            android:layout_height="300dp"
                            android:id="@+id/i1"
                            android:layout_gravity="center"
                            android:src="@drawable/me_1"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="568dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="4dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="336dp"
                            android:layout_height="568dp"
                            android:id="@+id/i2"
                            android:layout_gravity="center"
                            android:src="@drawable/me_2"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="402dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="4dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="345dp"
                            android:layout_height="402dp"
                            android:id="@+id/i3"
                            android:layout_gravity="center"
                            android:src="@drawable/me_3"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="375dp"
                        android:layout_marginBottom="10dp"
                        app:cardMaxElevation="10dp"
                        android:padding="2dp"
                        android:focusable="true"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="5dp"
                        app:cardElevation="4dp">
                        <com.ortiz.touchview.TouchImageView
                            android:layout_width="342dp"
                            android:layout_height="375dp"
                            android:id="@+id/i4"
                            android:layout_gravity="center"
                            android:src="@drawable/me_4"/>
                    </androidx.cardview.widget.CardView>

                </FrameLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="0dp"
                    android:text="Double tap to Zoom"
                    android:textStyle="italic"
                    android:textColor="@color/grey"
                    android:fontFamily="@font/nunito_semibold"
                    />

            </LinearLayout>


        </FrameLayout>

    </FrameLayout>
</androidx.core.widget.NestedScrollView>
